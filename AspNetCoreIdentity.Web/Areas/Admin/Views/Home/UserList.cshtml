
@{
    ViewData["Title"] = "UserList";
      Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<UserViewModel>

<h1>UserList</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User Name</th>
      <th scope="col">Email</th>
      <th scope="col">Roller</th>
      <th scope="col">Rol işlemleri</th>
    </tr>
  </thead>
  <tbody>

      @foreach (var item in Model)
        {
           <tr>

              <td>@item.Id</td>
              <td>@item.Name</td>
              <td>@item.Email</td>
             <td>
                  <user-role-names user-id="@item.Id"></user-role-names>
                </td>
              <td><a asp-area="admin" asp-controller="Roles" asp-action="AssingRoleTouser" asp-route-id="@item.Id">Rol ata</a></td>
            </tr>        
        }
 
  </tbody>
</table>