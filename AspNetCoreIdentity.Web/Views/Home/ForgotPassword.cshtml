
@{
    ViewData["Title"] = "ForgotPassword";
}


@model ForgotPasswordViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
    <div class="row mb-3">
        <div class="col-md-6">
        <div class="alert alert-info">Şifre yenileme linki e-posta adresinize gönderilecektir.</div>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"> </div>
          @if (TempData["SuccessMesssage"]!=null)
            {
            <div class="alert alert-success" role="alert">
             @TempData["SuccessMesssage"]
            </div>

                }
        <form method="post" asp-controller="Home" asp-action="ForgotPassword">
               <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                 <span class=" text-danger" asp-validation-for="Email"></span>
              </div>
              <button type="submit" class="btn btn-primary">Gönder</button>
        </form>

    </div>
    </div>
  
</div>


